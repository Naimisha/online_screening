   			<%=flash[:update_message]%>
   	</div>
<% end %>



<% if @user.role.role_name =="admin" %>
<div class="row">
	<div class="col-sm-8"></div>
	<div class="col-sm-3">
		<a href="/users/<%= @user.id %>/edit">
			<span class="glyphicon glyphicon-pencil"></span>
		</a>
	</div>
</div>
<% end %>
